default_platform(:ios)
skip_docs

platform :ios do
    lane :test do |options|
        puts 'Running on GitHub CI.' if options[:ci] == 'github'
        try_scan(
            devices: ["iPhone 8"],
            scheme: "Introspect iOS",
            skip_build: options[:ci] == 'github',
            try_count: 3,
            try_parallel: true,
            retry_parallel: false,
        )

        try_scan(
            devices: ["Apple TV"],
            scheme: "Introspect tvOS",
            skip_build: options[:ci] == 'github',
            try_count: 3,
            try_parallel: true,
            retry_parallel: false,
        )
    end
end

platform :mac do
    lane :test do |options|
        puts 'Running on GitHub CI.' if options[:ci] == 'github'
        try_scan(
            scheme: "Introspect macOS",
            skip_build: options[:ci] == 'github',
            try_count: 3,
            try_parallel: true,
            retry_parallel: false,
        )
    end
end
